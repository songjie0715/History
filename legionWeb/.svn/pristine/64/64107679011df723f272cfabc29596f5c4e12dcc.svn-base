@import "../../components/bootstrap-sass/assets/stylesheets/bootstrap/variables";
@import "../../components/bootstrap-sass/assets/stylesheets/bootstrap/mixins";
@import "../../components/bootstrap-sass/assets/stylesheets/bootstrap/navs";

*{
  margin: 0;
  padding: 0;
}

.glyphicon{
  font-size: 12px;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
ul,ol{
  margin: 0;
  padding: 0;
}

ul,li{
  list-style: none;
}

body{
  padding-top: 50px;
  min-width: 1280px;
}

/* 模态框 */
.modal{
  .modal-body{
    .form-group{
      overflow: hidden;
    }
    label{
      float: left;
      width: 100px;
      margin-top: 5px;
    }
    .form-control{
      width: 60%;
    }
  }
}

.form-group{
  p.text{
    padding-top: 5px;
  }
}

/* logo */
.logo a{
  margin-top: 10px;
  width: 120px;
  display: block;
  img{
    display: block;
    width: 100%;
  }
}

/* 头部 */
.nav-header{
  .user-handle{
    overflow: hidden;
    height: 50px;
    line-height: 50px;
    color: #ccc;
    span.glyphicon{
      font-size: 16px;
    }
    i{
      margin-left: 10px;
      font-size: 18px;
      font-style: normal;
    }
    .user{
      margin-right: 20px;
    }
  }
}

.sidebar {
  position: fixed;
  top: 51px;
  bottom: 0;
  left: 0;
  z-index: 1000;
  display: block;
  padding: 20px;
  overflow-x: hidden;
  overflow-y: auto;
  background-color: #364150;
}

/* Sidebar navigation */
.nav-sidebar {
  overflow: hidden;
  margin: -20px -21px 20px -20px;
  li{
    &.active a{
      color: #fff;
    }
    a{
      display: block;
      overflow: hidden;
      border-top: 1px solid #3d4957;
      color: #b4bcc8;
      padding-right: 20px;
      padding-left: 20px;
      font-size: 14px;
      &:focus,
      &:hover{
        background-color: #364150;
        color: #fff;
      }
      span.title{
        float: left;
        display: block;
        vertical-align: top;
        width: 140px;
      }
      .glyphicon{
        float: right;
      }
    }
  }
  .nav-second-level li{

    a{
      padding: 10px 30px;
      background-color: rgba(255, 255, 255, 0.1);
      &:focus,
      &:hover{
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
      }
    }
    &.active a{
      background-color: rgba(255, 255, 255, 0.2);
      color: #fff;
    }
  }
}

/* 表格 */
.table-data{
  padding: 0 15px;
  h3{
    font-size: 16px;
    text-align: center;
    margin-bottom: 30px;
  }
}

.table-customer{
  ul.table-list{
    display: inline-block;
    width: 100%;
    li{
      float: left;
      padding: 8px;
      width: 16.5%;
      border: 1px solid #ddd;
      margin: -6px 0 0 -1px;
    }
  }
  .table-content{
    margin: 0;
    dt{
      &.normal{
        li {
          font-weight:normal;
        }
      }
      .glyphicon{
        margin-right: 4px;
      }
    }
    dd li{
      &:first-child{
        //padding-left: 40px;
      }
    }
  }
}




.main {
  padding-top: 10px;
  padding-bottom: 30px;
  .page-title {
    margin: 0px;
    margin-left: -28px;
    margin-right: -15px;
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 15px;
    padding-bottom: 15px;
    margin-bottom: 30px;
    background-color: #fbfbfb;
    border-bottom: 1px solid #eee;
  }
}


/* 首页 */
.index-total{
  margin: 20px 0 80px;
  .tit{
    padding: 10px 0 20px;
    text-align: center;
  }
  .s-panel{
    width: 200px;
    height: 130px;
    border-radius: 10px;
    background: #10c1ae;
    margin: 5px auto;
    padding: 44px 0;
    p{
      font-size: 16px;
      color: #fff;
      margin-bottom: 10px;
      text-align: center;
    }
  }
}


/* 素材管理 */
.material-control{
  margin-bottom: 20px;
  .material-filter{
    overflow: hidden;
    form{
      margin-right: 10px;
    }
  }
}

/* 收入明细 */
.paydetail{
  .paydetail-control{
    margin-bottom: 20px;
    .date{
      margin-right: 20px;
      width: 150px;
    }
    .select{
      margin-right:20px;
    }
    button[type="submit"]{
      margin-top: 20px;
    }
  }
}

/* 收款信息 */
.payreceive{
  .payreceive-control{
    margin-bottom: 20px;
  }
  .payreceive-form{
    border: 1px solid #ddd;
    padding: 20px;
    margin-top: 20px;
  }
  .form-group{
    overflow: hidden;
    .form-control{
      width: 60%;
    }
    label{
      float: left;
      margin-top: 5px;
      width: 80px;
    }

  }
}

/* 提现明细 */
.payout{
  .card-box {
    border: 2px solid #f3f3f3;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    background-clip: padding-box;
    margin-bottom: 20px;
    background-color: #fff;
    height: 120px;
    padding: 20px;
    p{
      text-align: center;
    }
    span.price{
      display: inline-block;
      width: 50px;
    }
    .btn{
      position: absolute;
      top: 46px;
      right: 80px;
    }
  }

  .widget-two-warning {
    background-color: rgba(249, 200, 81, 0.2);
    border-color: rgba(249, 200, 81, 0.5);
  }

  .widget-two-success {
    background-color: rgba(75, 211, 150, 0.2);
    border-color: rgba(75, 211, 150, 0.5);
  }

  .widget-two-danger {
    background-color: rgba(245, 112, 122, 0.2);
    border-color: rgba(245, 112, 122, 0.5);
  }

  .payout-state{
    margin-top: 80px;
    padding-top: 10px;
    border-top: 1px solid #ddd;
  }
}



/* 渠道管理 */
.channel{
  .channel-control{
    margin-bottom: 20px;
    .btn{
      margin-right: 20px;
    }
  }
  .table-list{
    .link-view-channel{
      margin-left: 10px;
    }
  }
  #modal-add-group{
    .form-group{
      .checkbox-inline{
        width: auto;
        margin-right: 10px;
      }
    }
  }
}

/* 图书管理 */
.material-table{
  td.heat{
    position: relative;
    .heat-step{
      position: absolute;
      overflow: hidden;
      width: 100px;
      height:20px;
      &.hot{
        color: red;
      }
      &.hot-1{
        width: 8px;
      }
      &.hot-2{
        width: 16px;
      }
      &.hot-3{
        width: 24px;
      }
      &.hot-4{
        width: 32px;
      }
      &.hot-5{
        width: 40px;
      }
      &.hot-6{
        width: 48px;
      }
      &.hot-7{
        width: 56px;
      }
      &.hot-8{
        width: 64px;
      }
      &.hot-9{
        width: 70px;
      }
      &.hot-10{
        width: 78px;
      }
      &.hot-11{
        width: 100px;
      }
    }
  }
  .icon-book-hot{
    position: relative;
    top: 1px;
    display: inline-block;
    background: url(../img/icon-book-hot.png) 0 0 no-repeat;
    -webkit-background-size: 20px auto;
    background-size: 20px auto;
  }
}

/* 预览效果 */
.viewMaterial{
  dl.viewMaterial-list{
    overflow: hidden;
    margin-top: -20px;
    dt{
      float: left;
      width: 8%;
      margin-top: 20px;
    }
    dd{
      overflow: hidden;
      width: 90%;
      margin-top: 20px;
      p.tit{
      }
    }
    .select-channel{
      height: auto;
      overflow: hidden;
      &>li{
        float: left;
        margin-right: 20px;
        label>input{
          margin-left: 4px;
        }
        &>ul.group-collapse{
          padding-left: 16px;
        }
      }
    }
    #hiddenContent{
      padding: 20px;
      border: 1px solid #ccc;
      width: 910px;
      overflow-y: scroll;
      background-color: #fff;
      .textWrapper{
        padding: 20px;
        height: auto;
        background-color: #fff;
      }
      .image-align-center{
        text-align: center;
      }
      canvas{
        padding: 20px;
      }
    }
    .createLinkText{
      margin-top: 20px;
      th.tit{
        width: 100px;
      }
    }
  }
}





