body{background:url(../../img/mobile/chapter_bg.jpg) repeat right center}.chapterList-header{background:#2f3033;padding:0 15px;height:44px;font-size:16px}.chapterList-header .chapterList-l{float:left;color:#fff}.chapterList-header .chapterList-r{float:right;margin-top:7px;display:-webkit-box;display:-moz-box;display:box}.chapterList-header .chapterList-r .chapter-selectbox{position:relative;-webkit-box-flex:1;-moz-box-flex:1;box-flex:1;border:solid 1px #6cd;border-radius:3px;height:29px;line-height:29px;min-width:150px;margin-right:12px}.chapterList-header .chapterList-r .chapter-selectbox .selectbox-div{width:100%;line-height:27px}.chapterList-header .chapterList-r .chapter-selectbox .selectbox-div :after{position:absolute;content:'';top:0;right:10px}.chapterList-header .chapterList-r .chapter-selectbox .clist_select{-webkit-appearance:none;-moz-appearance:none;appearance:none;position:absolute;left:0;top:0;width:100%;height:100%;opacity:0;font-size:12px}.chapterList-header .chapterList-r .chapter-asc{color:#6cd;border:solid 1px #6cd;border-radius:3px;width:50px;text-align:center;height:29px;line-height:27px}