/*chapter menu*/
.chapter-menu-top{position:fixed;top:0;left:0;z-index:999;height:44px;background:#000;opacity:0;width:100%;
	/*overflow:hidden;*/
	-webkit-transition: all .2s;
	transition: all .2s;
	-webkit-transform: translateY(-100%);
	transform: translateY(-100%);
}
.chapter-menu-top.show{
	opacity: .7;
	-webkit-transform: translateY(0);
	transform: translateY(0);
}
.chapter-menu-top li{float:right;padding-top:6px;}.chapter-menu-top li img{width:30px;}.chapter-menu-top li.l{float:left;padding-left:15px}
.chapter-menu-top li.pd{padding-right:15px}.chapter-menu-top li a{display:block;}.chapter-menu-top li.mg{padding:6px 10px 0;}

.chapter-menu-bottom{position:fixed;bottom:0;left:0;z-index:999;background:#000;opacity:0;width:100%;height:64px;
	-webkit-transition: all .2s;
	transition: all .2s;
	-webkit-transform: translateY(100%);
}
.chapter-menu-bottom.show{
	opacity: .7;
	-webkit-transform: translateY(0);
	transform: translateY(0);
}
.chapter-menu-bottom ul{width:100%;}
.chapter-menu-bottom li{
	position: relative;width:20%;float:left;font-size:12px;padding-top:5px;text-align:center; height: 64px;}
.chapter-menu-bottom li a{display:block;color:#fff}.chapter-menu-bottom li img{vertical-align: middle;width:25px;padding-bottom:5px;}
.chapter-menu-bottom li a span{display:block;}
.chapter-menu-bottom li.chapterFontSize{background:url(../../img/wx/laikan/chapter-menu_font_v2.png) center 8px no-repeat;background-size:20px 20px;padding-top:40px !important;}
.chapter-menu-bottom li.chapterFontSize-on{background:url(../../img/wx/laikan/chapter-menu_font_v2on_new.png) center 8px no-repeat;background-size:20px 20px;color:#10c1ae;padding-top:40px !important;}
.chapter-menu-bottom li.chapterFontSize-on a{color:#10c1ae}

.popOver{
    display: none;
    position: absolute;
    z-index: 1;
    width:150px;
    padding:0;
    background: rgba(0, 0, 0, 1);
}
.popOver::before{
    content: '';
    position: absolute;
    /*right:17px;*/
    left:50%;
    margin-left:-12px;
    border: 10px solid #000;
    border-top: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
}

.popOver.up{
	width:120px; height: 47px;
	left: 50%;
	-webkit-transform: translateX(-50%);
	transform: translateX(-50%);
}
.popOver.up::before{
	left: 50%;
    bottom: -10px;
    -webkit-transform: rotate(180deg);
    transform: rotate(180deg);
}
.popOver.down::before{
    top: -10px;
	margin-left:40px;
}

.popOver ul{width:100%;overflow:hidden;}.popOver ul li{float:left;width:50%;text-align:center;padding:7px 0;}.popOver ul li img{width:25px;}
.chapter-menu-top,.chapter-menu-bottom{display:none}
